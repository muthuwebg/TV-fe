#register.modal.fade(role='dialog')
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal') &times;
				h4.modal-title Register
			.modal-body
				form#registerform
					.row
						.col-sm-12
							.form-group
								label Name
								input#username.form-control(type='name', name="username")
					.row
						.col-sm-12
							.form-group
								label Email address:
								input#email.form-control(type='email', name="email")
					.row
						.col-sm-12
							.form-group
								label Password:
								input#pwd.form-control(type='password', name="pwd")
					.row
						.col-sm-12
							.form-group
								label Re-Password:
								input#repwd.form-control(type='password', name="repwd")
					.row
						.col-sm-12
							.form-group
								button.btn.btn-default(type='submit') Submit
